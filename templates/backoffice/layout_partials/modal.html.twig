<div class="modal fade" id="modal-{{ modal_type|default('info') }}">
    <!--modal-dialog -->
    <div class="modal-dialog">
        <!-- modal-content -->
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
                <h4 class="modal-title"
                    id="{{ modal_type|default('info') ~ '-title' }}">{{ modal_title|capitalize }}</h4>
            </div>

            <div class="modal-body">
                <p>{% block modal_body %}{% endblock %}</p>
            </div>

            <div class="modal-footer">
                <button type="button"
                        id="modal-{{ modal_type }}-button-close"
                        data-dismiss="modal"
                        class="btn btn-default pull-left"
                >
                    Fermer
                </button>
                {% block modal_buttons %}{% endblock %}
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
