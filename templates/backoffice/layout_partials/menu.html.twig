<section class="sidebar">
    <div class="user-panel">
        <div class="pull-left image">
            <img src="{{ asset('build/img/default_bo.png') }}">
        </div>
        <div class="pull-left info">
            <p>{{ app.user.firstName|default('')|capitalize ~ ' ' ~ app.user.lastName|default('')|capitalize }}</p>
        </div>
    </div>

    <ul class="sidebar-menu tree" data-widget="tree">
        {% if  is_granted("ROLE_BO_SUPERADMIN") %}
            <li class="{% if app.request.attributes.get('_route') == 'backoffice_users_index' %}active{% endif %}">
                <a href="{{ path('backoffice_users_index') }}">
                    <i class="fas fa-users-cog"></i> <span>Gestion des utilisateurs</span>
                </a>
            </li>
        {% endif %}
        {% if is_granted("ROLE_BO_ADMIN") %}
            <li class="{% if app.request.attributes.get('_route') == 'backoffice_helps_index' %}active{% endif %}">
                <a href="{{ path('backoffice_helps_index') }}">
                    <i class="fas fa-question-circle"></i> <span>Gestion des aides</span>
                </a>
            </li>
        {% endif %}
    </ul>
</section>
