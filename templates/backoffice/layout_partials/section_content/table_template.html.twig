<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">{{ table_name|default('') }}</h3>
    </div>
    <div class="box-body table-responsive">
        {% block content %}
        <table class="table table-striped table-bordered dataTable">
            <thead>
            {% block thead %}
            {% endblock %}
            </thead>
            <tbody>
            {% block tbody %}
            {% endblock %}
            </tbody>
            <tfoot></tfoot>
        </table>
        {% endblock %}
    </div>
    <div class="box-footer clearfix">
            {% if section_add_action is defined and path_add_action is defined %}
            <div class="add_action pull-right">
                <a href="{{ path( path_add_action ) }}">
                    <i class="fas fa-plus-circle fa-fw"></i> {{ section_add_action }}
                </a>
            </div>
            {% endif %}
        </div>
</div>
