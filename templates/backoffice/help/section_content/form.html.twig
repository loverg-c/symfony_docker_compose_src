{% extends "backoffice/layout_partials/section_content/form_template.html.twig" %}
   {% set form_name = 'Ajouter une aide' %}
{% block content %}
    <br>
    {{ form_start(form, { 'attr' : { 'class': 'form-horizontal' } }) }}
    <div class="form-group">
            {{ form_label(form.page, null, {'label_attr': {'class': 'control-label col-xs-2'}}) }}
        <div class="col-xs-9">
            {{ form_widget(form.page, {'attr': {'class': 'form-control selectpicker', ' data-live-search' : 'true'}}) }}
        </div>
    </div>
    <br>
    <div class="form-group">
        {{ form_label(form.subject, null, {'label_attr': {'class': 'control-label col-xs-2'}}) }}
        <div class="col-xs-9">
            {{ form_widget(form.subject, {'attr': {'class': 'form-control selectpicker', ' data-live-search' : 'true'}}) }}
        </div>
    </div>
    <br>
    <div class="form-group">
        {{ form_label(form.title, null, {'label_attr': {'class': 'control-label col-xs-2'}}) }}
        <div class="col-xs-9">{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}</div>
    </div>
    <br>
    <div class="form-group">
        {{ form_label(form.content, null, {'label_attr': {'class': 'control-label col-xs-2'}}) }}
        <div class="col-xs-9">{{ form_widget(form.content, {'attr': {'class': 'form-control wysiwyg'}}) }} </div>
    </div>
    <br>
    <div class="form-group">
        {{ form_label(form.isActive, null, {'label_attr': {'class': 'control-label col-xs-2'}}) }}
        <div class="col-xs-4">
            {{ form_widget(form.isActive, {'attr': {'class': 'form-control',
                'data-toggle' : 'toggle',
                'data-on': 'Public', 'data-onstyle':"success",
                'data-off': 'Brouillon', 'data-offstyle':"warning",
            }}) }}
        </div>
    </div>
    <br>
    <div class="form-group">
        {{ form_widget(form.submit, {'label':'Ajouter','attr': {'class': 'btn btn-primary btn-lg col-md-offset-5 col-md-2 col-xs-offset-0 col-xs-12'}}) }}
    </div>
    <br>
    {{ form_end(form) }}
{% endblock %}
